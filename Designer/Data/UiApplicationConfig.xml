<?xml version="1.0" encoding="utf-8"?>
<UiApplicationConfig version="1.0" product="SolidDesigner">
  <!-- 可把大块配置拆成子文件 -->
  <Include href="Data\\splash.xml"/>

  <Theme darkMode="true">
    <Palette base="#121212" text="#E0E0E0" accent="#FF9E00"/>
    <Font family="Microsoft YaHei" size="12" weight="500" italic="false"/>
  </Theme>

  <Logging level="info">
    <Sink type="file" path="${APPDIR}/logs/%Y-%m-%d.log" rotateMB="32" keepDays="7"/>
    <Sink type="console"/>
  </Logging>

  <Features>
    <Flag name="NewUI" enabled="true"/>
    <Flag name="GpuTess" enabled="false"/>
  </Features>
</UiApplicationConfig>
